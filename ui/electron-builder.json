{
  "appId": "com.mjadachiv.crcautominter",
  "productName": "CRC Auto Minter",
  "files": [
    "main/**/*",
    "renderer/dist/**/*",
    "assets/**/*",
    "package.json",
    ".env"
  ],
  "directories": {
    "buildResources": "assets"
  },
  "win": {
    "icon": "assets/icon.ico",
    "target": ["nsis", "portable"]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true
  },
  "mac": {
    "icon": "assets/icon.icns",
    "target": ["dmg"],
    "identity": null
  },
  "dmg": {
    "background": "assets/icon.png",
    "window": {
      "width": 550,
      "height": 400
    }
  },
  "linux": {
    "icon": "assets/icon.png",
    "target": ["AppImage", "deb", "rpm", "tar.gz"]
  }
}
